programa
{
	funcao inicio ()
	{
	    inteiro A = 0, R = 0, contador = 1, contador_power = 0, acumulador_power = 0
	    
	    escreva("Digite o número inicial: ")
	    leia(A)
	    
	    escreva("Digite a razão: ")
	    leia(R)
	    
	    enquanto (contador <= 10) {
	        contador_power = 1
	        acumulador_power = A
	        
	        enquanto (contador_power < contador) {
	            acumulador_power = acumulador_power * R
	            
	            contador_power = contador_power + 1
	        }
	        
	        escreva("S(", contador, ") -> ", acumulador_power, "\n")
	        
	        contador = contador + 1
	    }
	}
}
