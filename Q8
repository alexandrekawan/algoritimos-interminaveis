programa
{
	funcao inicio ()
	{
	    inteiro A = 0, R = 0, contador = 1
	    
	    escreva("Digite o número inicial: ")
	    leia(A)
	    
	    escreva("Digite a razão: ")
	    leia(R)
	    
	    enquanto (contador <= 10) {
	        escreva("S(", contador, ") -> ", A + R * (contador - 1), "\n")
	        
	        contador = contador + 1
	    }
	}
}
